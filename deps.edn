{:version     "0.9.8"
 :description "Frontend to display public sector source code repositories"
 :url         "https://github.com/etalab/code.etalab.gouv.fr"
 :license     {:name "Eclipse Public License - v 2.0"
               :url  "http://www.eclipse.org/legal/epl-v20.html"}

 :deps
 {cheshire                        {:mvn/version "5.10.0"}
  clj-http                        {:mvn/version "3.10.1"}
  clj-rss                         {:mvn/version "0.2.5"}
  cljs-ajax                       {:mvn/version "0.8.0"}
  cljs-bean                       {:mvn/version "1.5.0"}
  clojure.java-time               {:mvn/version "0.3.2"}
  com.bhauman/figwheel-main       {:mvn/version "0.2.9"}
  com.bhauman/rebel-readline-cljs {:mvn/version "0.1.4"}
  com.draines/postal              {:mvn/version "2.0.3"}
  com.taoensso/sente              {:mvn/version "1.15.0"}
  com.taoensso/tempura            {:mvn/version "1.2.1"}
  com.taoensso/timbre             {:mvn/version "4.10.0"}
  compojure                       {:mvn/version "1.6.1"}
  http-kit                        {:mvn/version "2.3.0"}
  markdown-to-hiccup              {:mvn/version "0.6.2"}
  metosin/reitit-frontend         {:mvn/version "0.5.4"}
  org.clojure/clojure             {:mvn/version "1.10.1"}
  org.clojure/clojurescript       {:mvn/version "1.10.773"}
  org.clojure/core.async          {:mvn/version "1.2.603"}
  re-frame                        {:mvn/version "0.12.0"}
  reagent                         {:mvn/version "0.10.0"}
  reagent-utils                   {:mvn/version "0.3.3"}
  ring/ring-core                  {:mvn/version "1.8.1"}
  ring/ring-defaults              {:mvn/version "0.3.2"}
  ring/ring-devel                 {:mvn/version "1.8.1"}
  tea-time                        {:mvn/version "1.0.1"}}

 :paths ["src" "src/clj" "src/cljc" "resources"]

 :aliases
 {:run {:main-opts ["-m" "codegouvfr.server"]}

  :fig {:main-opts   ["-m" "figwheel.main" "-b" "dev" "-r"]
        :extra-paths ["src/cljs"]}

  :js {:main-opts   ["-m" "figwheel.main" "-O" "advanced" "-bo" "dev"]
       :extra-paths ["src/cljs"]}

  :test {:extra-paths ["test"]
         :extra-deps  {com.cognitect/test-runner
                       {:git/url "https://github.com/cognitect-labs/test-runner.git"
                        :sha     "209b64504cb3bd3b99ecfec7937b358a879f55c1"}}
         :main-opts   ["-m" "cognitect.test-runner"
                       "-d" "test" "-n" "codegouvfr.test"]}

  :jar {:extra-deps {seancorfield/depstar {:mvn/version "RELEASE"}}
        :main-opts  ["-m" "hf.depstar.uberjar" "codegouvfr.jar"
                     "-C" "-m" "codegouvfr.server"]}}}
